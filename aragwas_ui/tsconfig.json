    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowJs": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "strict": true,
    "lib": [
      "dom",
      "es5",
      "es2015.promise"
    ],
    "module": "es2015",
    "moduleResolution": "node",
    "target":"es5",

    "plugins": [
      { "name": "tslint-language-service"}
    ]
  }
}
